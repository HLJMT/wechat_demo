<!--pages/comment/comment.wxml-->
<view class='detail-com'>
  <view class='detail-container' style='background: url({{detail.images.large}}) no-repeat  top/cover'></view>
  <view class='detail-mask'></view>
  <view class='detail-info'>
    <image src="{{detail.images.large}}" class='detail-img'></image>
    <view class='detail'>
      <view class='detail-nm'>{{detail.title?detail.title:'--'}}</view>
      <view>{{detail.original_title?detail.original_title:'--'}}</view>
      <view class='detail.sc'>{{detail.rating.average?detail.rating.average:'--'}}分</view>
      <view>{{detail.countries[0]?detail.countries[0]:'--'}}</view>
      <view>导演：{{detail.directors[0].name?detail.directors[0].name:'--'}}</view>
    </view>
  </view>
  <view class='desc'>{{detail.summary?detail.summary:'--'}}</view>
  <!-- 评价 -->

</view>
